model Character {
  id     Int     @id @default(autoincrement())
  image  String?
  name   String
  age    Int
  weight Float
  info   String
  movies Movie[]

  @@map("characters")
}

model Movie {
  id           Int         @id @default(autoincrement())
  title        String
  release_date DateTime
  rating       Int
  createdAt    DateTime    @default(now())
  genres       Genre[]
  characters   Character[]

  @@map("movies")
}

model Genre {
  id     Int     @id @default(autoincrement())
  name   String
  image  String?
  movies Movie[]

  @@map("genres")
}
