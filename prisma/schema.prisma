model Character {
  id          Int    @id @default(autoincrement())
  image       String?
  name        String
  age         Int
  weight      Float
  info        String
  appearances Int[]

  @@map("characters")
}

model Movie {
  id           Int      @id @default(autoincrement())
  title        String
  release_date DateTime
  rating       Int
  genres   Genre[]

  @@map("movies")
}

model Genre {
  id     Int    @id @default(autoincrement())
  image  String
  movies Movie[]

  @@map("genres")
}
